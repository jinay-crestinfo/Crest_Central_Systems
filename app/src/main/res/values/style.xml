<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize stroke width and color for normal state -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@android:color/black</item>

        <!-- Customize stroke width and color for error state -->
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeErrorColor">@android:color/black</item>
    </style>

    <style name="ToolBarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/black_crest</item>
    </style>

    <style name="NavDrawerMenuItem">
        <item name="android:textSize">18sp</item> <!-- Adjust the text size as desired -->
        <!-- Add other styling attributes here if needed -->
    </style>
</resources>